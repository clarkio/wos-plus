---
interface Props {
  displayName: string;
  profileImageUrl: string;
  login: string;
}

const { displayName, profileImageUrl, login } = Astro.props;
---

<div class="user-menu" data-user-menu>
  <button
    class="user-button"
    type="button"
    aria-expanded="false"
    aria-haspopup="true"
    aria-label={`User menu for ${displayName}`}
  >
    <img
      src={profileImageUrl}
      alt=""
      class="user-avatar"
      loading="lazy"
      width="32"
      height="32"
    />
    <span class="user-name">{displayName}</span>
    <svg class="chevron" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
      <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
    </svg>
  </button>
  <div class="dropdown-menu" hidden>
    <div class="dropdown-header">
      <span class="dropdown-username">@{login}</span>
    </div>
    <hr class="dropdown-divider" />
    <a href="/player" class="dropdown-item">
      <svg class="dropdown-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
        <circle cx="9" cy="7" r="4"></circle>
      </svg>
      Player View
    </a>
    <a href="/streamer" class="dropdown-item">
      <svg class="dropdown-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <rect x="2" y="7" width="20" height="15" rx="2" ry="2"></rect>
        <polyline points="17 2 12 7 7 2"></polyline>
      </svg>
      Streamer View
    </a>
    <hr class="dropdown-divider" />
    <a href="/api/auth/logout" class="dropdown-item logout">
      <svg class="dropdown-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"></path>
        <polyline points="16 17 21 12 16 7"></polyline>
        <line x1="21" y1="12" x2="9" y2="12"></line>
      </svg>
      Logout
    </a>
  </div>
</div>

<script>
  function initUserMenus() {
    const menus = document.querySelectorAll('[data-user-menu]');
    if (menus.length === 0) return;

    const closeAllMenus = () => {
      menus.forEach((menu) => {
        const button = menu.querySelector('.user-button') as HTMLButtonElement | null;
        const dropdown = menu.querySelector('.dropdown-menu') as HTMLElement | null;
        if (!button || !dropdown) return;
        button.setAttribute('aria-expanded', 'false');
        dropdown.hidden = true;
      });
    };

    menus.forEach((menu) => {
      const button = menu.querySelector('.user-button') as HTMLButtonElement | null;
      const dropdown = menu.querySelector('.dropdown-menu') as HTMLElement | null;

      if (!button || !dropdown) return;

      // Prevent duplicate listeners across Astro navigations.
      if ((button as any).__wosUserMenuInit) return;
      (button as any).__wosUserMenuInit = true;

      // Toggle menu on button click
      button.addEventListener('click', (e) => {
        e.stopPropagation();
        const isExpanded = button.getAttribute('aria-expanded') === 'true';
        closeAllMenus();
        button.setAttribute('aria-expanded', (!isExpanded).toString());
        dropdown.hidden = isExpanded;
      });
    });

    const win = window as any;
    if (!win.__wosUserMenuGlobalListeners) {
      win.__wosUserMenuGlobalListeners = true;

      // Close on click outside
      document.addEventListener('click', (e) => {
        const target = e.target as Node;
        const clickedInMenu = Array.from(document.querySelectorAll('[data-user-menu]')).some((m) =>
          m.contains(target)
        );
        if (!clickedInMenu) closeAllMenus();
      });

      // Close on Escape key
      document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape') closeAllMenus();
      });
    }
  }

  // Initialize on load and after Astro navigation
  initUserMenus();
  document.addEventListener('astro:page-load', initUserMenus);
</script>

<style>
  .user-menu {
    position: relative;
  }

  .user-button {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 0.75rem;
    background: var(--bg-tertiary, #4b1a81);
    border: 1px solid var(--border-primary, rgba(199, 156, 255, 0.4));
    border-radius: 8px;
    color: var(--text-primary, #dacfe6);
    cursor: pointer;
    transition: all 0.2s ease;
    font-family: inherit;
    font-size: 0.9rem;
  }

  .user-button:hover {
    background: var(--bg-secondary, #7736c6);
    border-color: var(--accent-violet, #c79cff);
  }

  .user-button:focus-visible {
    outline: 2px solid var(--accent-violet, #c79cff);
    outline-offset: 2px;
  }

  .user-avatar {
    width: 32px;
    height: 32px;
    border-radius: 50%;
    object-fit: cover;
  }

  .user-name {
    font-weight: 500;
    max-width: 120px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }

  .chevron {
    width: 16px;
    height: 16px;
    transition: transform 0.2s ease;
    flex-shrink: 0;
  }

  .user-button[aria-expanded="true"] .chevron {
    transform: rotate(180deg);
  }

  .dropdown-menu {
    position: absolute;
    top: calc(100% + 0.5rem);
    right: 0;
    min-width: 200px;
    background: var(--bg-secondary, #2a1050);
    border: 1px solid var(--border-primary, rgba(199, 156, 255, 0.4));
    border-radius: 8px;
    padding: 0.5rem;
    z-index: 100;
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.3);
  }

  .dropdown-header {
    padding: 0.5rem 0.75rem;
  }

  .dropdown-username {
    color: var(--text-secondary, rgba(218, 207, 230, 0.7));
    font-size: 0.85rem;
  }

  .dropdown-item {
    display: flex;
    align-items: center;
    gap: 0.625rem;
    padding: 0.625rem 0.75rem;
    color: var(--text-primary, #dacfe6);
    text-decoration: none;
    border-radius: 6px;
    transition: background 0.2s ease;
    font-size: 0.9rem;
  }

  .dropdown-item:hover {
    background: var(--bg-tertiary, #4b1a81);
  }

  .dropdown-item:focus-visible {
    outline: 2px solid var(--accent-violet, #c79cff);
    outline-offset: -2px;
  }

  .dropdown-icon {
    width: 18px;
    height: 18px;
    flex-shrink: 0;
  }

  .dropdown-divider {
    border: none;
    border-top: 1px solid var(--border-primary, rgba(199, 156, 255, 0.2));
    margin: 0.5rem 0;
  }

  .dropdown-item.logout {
    color: #f87171;
  }

  .dropdown-item.logout:hover {
    background: rgba(248, 113, 113, 0.1);
  }

  @media (max-width: 480px) {
    .user-name {
      display: none;
    }

    .user-button {
      padding: 0.375rem;
    }
  }
</style>
